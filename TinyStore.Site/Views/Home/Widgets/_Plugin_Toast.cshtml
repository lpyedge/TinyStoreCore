<style>
    .toast {
        position: fixed;
        top: 44%;
        left: 50%;
        transform: translateX(-50%);
        min-width: 120px;
        max-width: 220px;
        min-height: 22px;
        padding: 10px;
        line-height: 22px;
        text-align: center;
        font-size: 18px;
        color: #fff;
        background: rgba(0, 0, 0, 0.6);
        border-radius: 5px;
        display: none;
        z-index: 99999;
    }
</style>

<script>
(function ($) {
     /*
       $.toast('网络错误，请稍后重试',1400);
    */
    $.extend({
        $el:null,
        toast: function (msg, timeout) {
            if (!timeout) {
                timeout = 1500;
            }
            new jBox('Notice', {content: msg, color: 'red',autoClose: timeout, position: { x: 'center',y: 'bottom'},offset:{y:-120} });
        }
    });
})(jQuery);
</script>