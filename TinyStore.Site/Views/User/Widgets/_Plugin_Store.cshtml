//商户店铺列表
Store.StoreList = function (storelist) {
    if (storelist) {
        localStorage.setItem("StoreList", JSON.stringify(storelist));
    } else {
        return JSON.parse(localStorage.getItem("StoreList"));
    }
};

Store.StoreListRemove = function () {
    localStorage.removeItem("StoreList");
};

//商户当前店铺
Store.StoreCurrent = function (index) {
    var storeList =Store.StoreList();    
    if (index!==undefined) {     
        if (index<0 || (storeList && storeList.length <= index)){
            index = 0;
        }
        sessionStorage.setItem("StoreCurrent", index);
    } else {
        index = sessionStorage.getItem("StoreCurrent");
        if (index == null){
            index = 0;
        }
        if (storeList && storeList.length > index)
            return storeList[index];
        return null;
    }
};

Store.StoreCurrentRemove = function () {
    localStorage.removeItem("StoreCurrent");
};


