var Store = {};
Store.Token = function (token) {
    if (token) {
        localStorage.setItem("UserToken", JSON.stringify(token));
    } else {
        return JSON.parse(localStorage.getItem("UserToken"));
    }
};

Store.TokenRemove = function () {
    localStorage.removeItem("UserToken");
};

